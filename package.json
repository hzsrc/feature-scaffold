{
    "name": "feature-scaffold",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "cross-env NODE_ENV=development ENV_CONFIG=dev vue-cli-service serve --mock",
        "start": "npm run dev",
        "serve": "npm run dev",
        "build-dev": "cross-env NODE_ENV=development ENV_CONFIG=dev_build vue-cli-service build",
        "build-test": "cross-env NODE_ENV=production ENV_CONFIG=test vue-cli-service build",
        "build-demo": "cross-env NODE_ENV=production ENV_CONFIG=demo vue-cli-service build",
        "build": "cross-env NODE_ENV=production ENV_CONFIG=prod vue-cli-service build",
        "build-preview": "npm run build --preview && npm run play-dist",
        "play-dist": "node -e \"require('dynamic-mocker').start('./mock/static-config.js')\"",
        "mock": "node -e \"require('dynamic-mocker').start('./mock/mock-config.js')\" ",
        "proxy80": "node -e \"require('dynamic-mocker').start('./mock/mock-proxy80.js')\" ",
        "lint": "vue-cli-service lint --ext .js,.vue src",
        "fixlint": "vue-cli-service lint --fix --ext .js,.vue src",
        "build-font": "node -e \"require('./build/svg2font.js').build()\"",
        "show-map": "node -e \"console.log(require('./config').build.sourceMapPath)\""
    },
    "dependencies": {
        "core-js": "^2.6.5",
        "vue": "^2.6.10",
        "vue-router": "^3.0.3",
        "vuex": "^3.0.1",
        "axios": "^0.19.0",
        "echarts": "^4.3.0",
        "element-theme-chalk": "^2.12.0",
        "element-ui": "^2.12.0",
        "qrcanvas-vue": "^2.0.3",
        "vuedraggable": "^2.23.1"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^3.11.0",
        "@vue/cli-plugin-eslint": "^3.11.0",
        "@vue/cli-service": "^3.11.0",
        "babel-eslint": "^10.0.1",
        "babel-plugin-component": "^1.1.1",
        "cross-env": "^6.0.3",
        "dynamic-mocker": "^1.2.10",
        "eslint": "^5.16.0",
        "eslint-plugin-vue": "^5.0.0",
        "join-file-content-plugin": "1.0.1",
        "lint-staged": "^8.1.5",
        "postcss-pxtorem": "^4.0.1",
        "sass": "^1.18.0",
        "sass-loader": "^7.1.0",
        "vue-template-compiler": "^2.6.10",
        "webpack-iconfont-plugin-nodejs": "^1.0.16",
        "webpack-theme-color-replacer": "^1.3.1"
    },
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.{js,vue}": [
            "vue-cli-service lint",
            "git add"
        ]
    }
}
